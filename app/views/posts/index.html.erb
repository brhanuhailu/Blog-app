<h1> List of posts will be displayed here</h1>

<div class="d-flex align-items-center mb-3 gap-3 text-primary-emphasis w-100">
 <div>
  <img src="<%= @user.photo %>" alt ="users photo" class ="border border-dark border-3 p-5">
</div>

<div class=" border border-dark border-3 w-100 p-3">
   <h2 class="flex-grow-1 p-2"> <%= @user.name %></h2>
    <div class=" d-flex justify-content-end">
    <p> Number of posts: <%= @user.posts_counter %></p>
    </div>
</div>
</div>

<section>
 <%@user.most_recent_posts.each do |post| %>
    <div class=" border border-dark border-3 mx-auto w-100 p-3 mb-3 text-dark">
        <h3> <%= link_to post.title, "/users/#{@user.id}/posts/#{post.id}" %> </h3>
        <p> <%= post.text %></p>
    <div class="d-flex justify-content-between">
       <div>
          <%= form_with url: "/likes/#{post.id}" do |form| %>
          <%= form.submit "Like", class: "btn btn-primary" %>
          <% end %>
       </div>
       <div>
       <span>Comments: <%= "#{post.comments_counter || 0}" %></span>
       <span> Likes: <%= "#{post.likes_counter || 0}" %></span>
    </div>
</div>
</div>

<div class="border border-dark border-3 mx-auto w-100 p-3 mb-3">
   <h3 class="mb-3 fs-4"> Comments </h3>
    <% post.most_recent_comments.each do |comment| %>
    <div class="mb-3">
    <span> <%= comment.author.name %>:</span>
    <span> <%= comment.text %></span>
    </div>
    <% end %>
</div>
<% end %>

<div class="text-center mb-3">
  <a href="/posts/new" class="btn btn-primary">Create new post</a>
</div>

<div class="d-flex align-items-center justify-content-center p-3">
    <%= will_paginate @posts %>
</div>
</section>
