<h1>Create new post</h1>

<%= form_with model: @post, url: user_posts_path do |form| %>

  <div class="mb-3">
    <%= form.label :Title, class: "form-label fs-3" %>
    <%= form.text_field :title, placeholder: "post title", class: "form-control"  %>
  </div>
  <div class="mb-3">
    <%= form.label :Contents, class: "form-label fs-3" %>
    <%= form.text_area :text, placeholder: "post text...", class: "form-control form-control-lg" %>
  </div>
  <div>
    <%= form.submit "Create Post", class: "btn btn-primary" %>

  </div>
<% end %>